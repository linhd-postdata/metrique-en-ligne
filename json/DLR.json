[
    {
        "code": "DLR_4/DLR335",
        "author": "Lucie Delarue-Mardrus",
        "work": "LA FIGURE DE PROUE",
        "date": "1908",
        "title": "LA FIGURE DE PROUE",
        "profile": "6=6",
        "structure": "suite p\u00e9riodique",
        "url": "https://crisco2.unicaen.fr/verlaine/index.php?navigation=textesauteurs&auteur=DLR_4&code_text=DLR335_7",
        "text": [
            [
                {
                    "verse": "La figure de proue allong\u00e9e \u00e0 l'\u00e9trave,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Vers les quatre infinis, le visage en avant",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "S'\u00e9lance ; et, magnifique, enorgueilli de vent,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Le bateau tout entier la suit comme un esclave.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Ses yeux ont la couleur du large doux-amer,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Mille relents salins ont gonfl\u00e9 ses narines,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Sa poitrine a hum\u00e9 mille brises marines,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et sa bouche entr'ouverte a bu toute la mer.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Lors de son premier choc contre la vague ronde,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Quand, neuve, elle quitta le premier de ses ports,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Elle mit, pour voler, toutes voiles dehors,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et ses jeunes marins criaient : \u00ab Au nord du monde ! \u00bb",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Ce jour la mariait, vierge, avec l'Inconnu.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le hasard, d\u00e9sormais, la guette \u00e0 chaque rive,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Car, sur la proue aigu\u00eb o\u00f9 son destin la rive,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Qui sait quels oc\u00e9ans laveront son front nu ?",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Elle naviguera dans l'oubli des temp\u00eates",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Sur l'argent des minuit et sur l'or des midis,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et ses yeux pleureront les havres arrondis",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Quand les lames l'attaqueront comme des b\u00eates.",
                    "metre": "8+4",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Elle saura tous les aspects, tous les climats,",
                    "metre": "6\u22126",
                    "rhyme": "a"
                },
                {
                    "verse": "La chaleur et le froid, l'\u00c9quateur et les p\u00f4les ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Elle rapportera sur ses fr\u00eales \u00e9paules",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Le monde, et tous les ciels aux pointes de ses m\u00e2ts.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Et toujours, face au large o\u00f9 neigent des mouettes,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Dans la s\u00e9curit\u00e9 comme dans le p\u00e9ril,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Seule, elle m\u00e8nera son vaisseau vers l'exil",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "O\u00f9 s'en vont \u00e0 jamais les d\u00e9sirs des po\u00e8tes ;",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Seule, elle affrontera les assauts furibonds",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "De l'ennemie \u00e9nigmatique et ses grands calmes ;",
                    "metre": "4+4+4",
                    "rhyme": "b"
                },
                {
                    "verse": "Seule, \u00e0 son front, elle ceindra, telles des palmes,",
                    "metre": "4+4+4",
                    "rhyme": "b"
                },
                {
                    "verse": "les souvenirs de tant de sommeils et de bonds.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Et quand, ayant bless\u00e9 les flots de son sillage,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le chef coiff\u00e9 de go\u00ebmons, sauvagement,",
                    "metre": "4+4+4",
                    "rhyme": "b"
                },
                {
                    "verse": "Elle s'en reviendra comme vers un aimant",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "A son port, le col ceint des perles du voyage,",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Parmi toutes les mers qui baignent les pays,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le mirage profond de sa face effar\u00e9e",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Aura divinement repeupl\u00e9 la mar\u00e9e",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "D'une ultime sir\u00e8ne aux regards inou\u00efs.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "J'ai voulu le destin des figures de proue",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui t\u00f4t quittent le port et qui reviennent tard.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Je suis jalouse du retour et du d\u00e9part",
                    "metre": "6\u22126",
                    "rhyme": "b"
                },
                {
                    "verse": "Et des coraux mouill\u00e9s dont leur gorge se noue.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "J'affronterai les mornes gris, les br\u00fblants bleus",
                    "metre": "4+4+4",
                    "rhyme": "a"
                },
                {
                    "verse": "De la mer figur\u00e9e et de la mer r\u00e9elle,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Puisque, du fond du risque, on s'en revient plus belle,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Rapportant un visage ardent et fabuleux.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ],
            [
                {
                    "verse": "Je serai celle-l\u00e0, de son vaisseau suivie,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui l\u00e8ve haut un front des houles baptis\u00e9,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et dont le c\u0153ur, jusqu'\u00e0 la mort inapais\u00e9,",
                    "metre": "6\u22126",
                    "rhyme": "b"
                },
                {
                    "verse": "Traverse bravement le voyage et la vie.",
                    "metre": "6+6",
                    "rhyme": "a"
                }
            ]
        ]
    }
]