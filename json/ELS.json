        "text": [
            [
                {
                    "verse": "Ici c\u2019est un vieil homme de cent ans",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "qui dit, selon la chair, Flandre et le sang :",
                    "metre": "5\u22125",
                    "rhyme": ""
                },
                {
                    "verse": "souvenez-vous-en, souvenez-vous-en,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "en ouvrant son c\u0153ur de ses doigts tremblants",
                    "metre": "5+5",
                    "rhyme": ""
                }
            ],
            [
                {
                    "verse": "pour montrer \u00e0 tous sa vie comme un livre,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "et, dans sa joie comme en ses oraisons,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "tout un genre humain occup\u00e9 \u00e0 vivre",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "en ses villes pies d\u2019hommes et d\u2019enfants.",
                    "metre": "5+5",
                    "rhyme": ""
                }
            ],
            [
                {
                    "verse": "Or \u00e0 tous ici, ses pleurs et ses f\u00eates,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "et, suivant le ciel peint \u00e0 ses couleurs,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "voici sa maison, ses fruits et ses fleurs,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "en ses horizons d\u2019hommes et de b\u00eates ;",
                    "metre": "5+5",
                    "rhyme": ""
                }
            ],
            [
                {
                    "verse": "et lors ses heures d\u2019hiver et printemps",
                    "metre": "10",
                    "rhyme": ""
                },
                {
                    "verse": "venues en musique ainsi qu\u2019en pri\u00e8res,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "sous, des Christs en croix, des saints, des calvaires,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "puis sa Foi aussi bonne en tous les temps,",
                    "metre": "5+5",
                    "rhyme": ""
                }
            ],
            [
                {
                    "verse": "pour la paix de sa vie trop \u00e0 l\u2019attache",
                    "metre": "5\u22125",
                    "rhyme": ""
                },
                {
                    "verse": "dans les jours, les mois, des quatre saisons,",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "et le r\u00e9confort de ses mains qui t\u00e2chent",
                    "metre": "5+5",
                    "rhyme": ""
                },
                {
                    "verse": "ici de leur mieux et tr\u00e8s simplement.",
                    "metre": "5+5",
                    "rhyme": ""
                }
            ]
        ]
    }
]