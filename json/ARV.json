[
    {
        "code": "ARV_1/ARV1",
        "author": "F\u00e9lix Arvers",
        "work": "PO\u00c9SIES",
        "date": "1833",
        "title": "Pr\u00e9face",
        "profile": "6+6",
        "structure": "distiques",
        "url": "https://crisco2.unicaen.fr/verlaine/index.php?navigation=textesauteurs&auteur=ARV_1&code_text=ARV1_7",
        "text": [
            [
                {
                    "verse": "O toi ! mon premier n\u00e9, qu'une amour maternelle",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "A nourri de son lait et couv\u00e9 de son aile,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui grandis sans effort, enfant\u00e9 librement,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "A mes heures de calme et de recueillement ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Avant de te livrer, pauvre enfant, aux orages",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "De cette mer houleuse et f\u00e9conde en naufrages.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et de t'abandonner \u00e0 la gr\u00e2ce de Dieu,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Que je te parle encor, que je te dise adieu !",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "H\u00e9las ! je ne sais pas \u00e0 quelles destin\u00e9es",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Dieu r\u00e9serve la part qu'il ma faite d'ann\u00e9es,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et s'il ne voulut pas, aux flancs qui t'ont port\u00e9.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Accorder la puissance et la f\u00e9condit\u00e9.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Quoiqu'il puisse advenir, d\u00fbt-il sur cette terre",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Te laisser cheminer obscur et solitaire,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Ou, comme au vieux Jacob, daign\u00e2t-il m'envoyer",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Douze fils grands et beaux s'\u00e9battre \u00e0 mon foyer.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "C'est sur toi que je veux, sur toi, t\u00eate ch\u00e9rie,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Verser tous les tr\u00e9sors de mon idol\u00e2trie !",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Dieu pourra m\"en donner qui seront plus parfaits,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Mais, nous autres parens, nous sommes ainsi faits ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Nous avons par momens d'\u00e9tranges pr\u00e9f\u00e9rences :",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "C'est sur toi que j'ai mis toutes mes esp\u00e9rances,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Comme ces vieux barons, pr\u00e9venus en secret",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Pour un coquin de fils, pilier de cabaret.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "P\u00e2ture d'usuriers et coureur de Julies,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui trouvaient une excuse \u00e0 toutes ses folies,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Sans pouvoir de cela donner d'autre raison",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Sinon que c'\u00e9tait lui l'a\u00een\u00e9 de sa maison.",
                    "metre": "6+6",
                    "rhyme": "b"
                }
            ],
            [
                {
                    "verse": "Et cependant voil\u00e0 que pour une fum\u00e9e,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Pour l'\u00e9clair d'un instant qu'on nomme renomm\u00e9e,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Pour vouloir follement attacher \u00e0 mes pas",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Un mis\u00e9rable bruit que l'on n'entendra pas.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "J'ai troubl\u00e9 le repos de ta douce retraite,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "J'ai d\u00e9couvert \u00e0 tous ta nudit\u00e9 secr\u00e8te,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et d\u00e9chir\u00e9 le voile o\u00f9 tu t'\u00e9tais cach\u00e9,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Comme une belle esclave au milieu d'un march\u00e9.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Au moins, pauvre petit, avant que je t'envoie,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Ainsi que ces enfans de la vieille Savoie,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Faire ton tour du monde, et que jusqu'au chemin",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "J'aille te reconduire en te donnant la main.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "N'as-tu rien oubli\u00e9 de ton petit bagage ?",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Perdu dans cette foule, ignorant son langage,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le d\u00e9but sera rude, et je dois t' avertir",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Que bien long-temps peut-\u00eatre il te faudra p\u00e2tir ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Mais contre leur m\u00e9pris et leur indiff\u00e9rence,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Sois homme de courage et de pers\u00e9v\u00e9rance,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Crains toujours le bon Dieu, reste honn\u00eate gar\u00e7on,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et suis toujours ta route en chantant ta chanson.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Il en passera bien qui n'y prendront pas garde,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Mais il n'en faut qu'un seul qui s'arr\u00eate et regarde,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Pour que tous aussit\u00f4t s'en viennent se presser",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Pour entendre ta vielle et pour te voir danser.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "C'est le commencement de plus d'une fortune ;",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Enfin, l'on ne sait pas ! peut-\u00eatre il en est une",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui t'attend toute pr\u00eate, et que tu trouveras",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Un beau jour \u00e0 ta porte et t'ouvrant ses deux bras.",
                    "metre": "6+6",
                    "rhyme": "b"
                }
            ],
            [
                {
                    "verse": "H\u00e9las ! h\u00e9las ! que dis-je ? illusion d'un p\u00e8re",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui croit ce qu'il d\u00e9sire et voit ce qu'il esp\u00e8re !",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Mon fils, nous sommes n\u00e9s dans un si\u00e8cle maudit,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "O\u00f9 l'amour de la force a perdu son cr\u00e9dit ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Une morte-saison d'art et de po\u00e9sie,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "O\u00f9 le d\u00e9sir de l'or, avide fr\u00e9n\u00e9sie.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Au fond du c\u0153ur de l'homme est venu comprimer",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Tous les nobles penchans qui voudraient y germer.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Notre \u00e2ge est une ville aux murs de cent coud\u00e9es,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Les foss\u00e9s sont pleins d'eau, les portes bien gard\u00e9es,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et l'art, pauvre proscrit, n'y peut, comme Sinon,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "P\u00e9n\u00e9trer que par ruse et sous un autre nom.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Jusqu'au moment peut-\u00eatre o\u00f9 Dieu fera descendre",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Des monts de Thessalie un nouvel Alexandre,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Un de ces hommes forts qu'il a, d\u00e8s le berceau,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Marqu\u00e9s lui-m\u00eame au front, et scell\u00e9s de son sceau ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Qui, repoussant du pied toute ruse vulgaire.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Viendra contre ces murs pousser son char de guerre.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et sur ces hauts remparts fondra comme un vautour.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Dans son ardente serre \u00e9treignant chaque tour ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Si bien que sous ses coups les antiques murailles",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Se sentent tressaillir au fond de leurs entrailles,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et que l'art, par la br\u00e8che, entre dans la cit\u00e9",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Sur le char du vainqueur, debout \u00e0 son c\u00f4t\u00e9 !",
                    "metre": "6+6",
                    "rhyme": "b"
                }
            ],
            [
                {
                    "verse": "C'est un gar\u00e7on d'esprit qui savait son affaire,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Celui qui, tout imberbe encor, venant de faire",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Un livre, premier fruit de son jeune talent.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Qui va, suivant sa route, et s'accro\u00eet en allant,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Sentit que, dans un si\u00e8cle aussi peu po\u00e9tique.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Pour fixer les regards de ce monde apathique.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Il fallait arborer au coin de son chapeau",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Quelque chose d'\u00e9trange en guise de drapeau.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Attacha d'un seul mot et d'un seul trait de plume,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Une aigrette bizarre au front de son volume.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Et, pour sauver son nom de cette mer d'oubli.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Un beau jour inventa le fameux point sur l'i !",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "On s'est fort r\u00e9cri\u00e9 : toutes les coteries",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Ont assomm\u00e9 l'auteur de mille espi\u00e8gleries ;",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Mais toujours gagna-t-il ce qu'il avait voulu :",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Si beaucoup ont raill\u00e9, c'est que beaucoup ont lu ;",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et dans tous ces lecteurs, plus d'une sympathie",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Pour l'auteur et ses vers fut bient\u00f4t ressentie :",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le livre s'est fait jour, et pas un n'a pens\u00e9",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Qu'il donnait dans un pi\u00e8ge habilement dress\u00e9,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Et que le jeune auteur qui s'ouvrait la carri\u00e8re,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Laissant crier la foule, \u00e9tait l\u00e0 par derri\u00e8re,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "En voyant ce que c'est que des pauvres humains,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "A rire des rieurs et se frotter les mains !",
                    "metre": "6+6",
                    "rhyme": "b"
                }
            ],
            [
                {
                    "verse": "Encor, lorsqu'il parut, il faut le reconna\u00eetre.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Le temps \u00e9tait moins rude et plus propice \u00e0 na\u00eetre :",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "De po\u00e9sie et d'art les hautes questions",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Avaient dans plus d'un c\u0153ur trouv\u00e9 des passions :",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "La dispute chauffait, et la litt\u00e9rature",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Revenait au beau temps de monsieur de Voiture,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "O\u00f9 quinze jours entiers Paris s'entretenait",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "De l'apparition d'un conte ou d'un sonnet.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Tout allait \u00e0 ravir : les lettr\u00e9s du parterre",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Se gourmaient chaque soir pour ou contre Voltaire ;",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "On s'injuriait fort : nous \u00e9tions galamment",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Hu\u00e9s, siffles, honnis : enfin, c'\u00e9tait charmant !",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "On prenait garde \u00e0 nous, et cette pol\u00e9mique",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Redonnait quelque souffle au spectre acad\u00e9mique ;",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "En cet heureux \u00e9tat Juillet nous a trouv\u00e9s,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Juillet qui tua l'art sous un tas de pav\u00e9s.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Ce nouvel \u00e2ge d'or, temps ou chaque querelle",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Avait de chauds amis pr\u00eats \u00e0 lutter pour elle,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "O\u00f9 messieurs de l'Empire et tous les beaux esprits",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Nous jetaient \u00e0 l'envi la boue et le m\u00e9pris.",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "H\u00e9las ! il est pass\u00e9, sans espoir qu'il renaisse !",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "\u2014 Et comme, en rappelant les jours de sa jeunesse,",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Sophie Arnould parfois disait \u00e0 quarante ans :",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "\u00ab J'\u00e9tais bien malheureuse ! ah ! c'\u00e9tait le bon temps ! \u00bb",
                    "metre": "6+6",
                    "rhyme": "b"
                }
            ],
            [
                {
                    "verse": "Quand l'aigle imp\u00e9rial du feu de sa prunelle",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Fascinait l'univers qui tremblait sous son aile.",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Quiconque au seul aspect de toutes ces splendeurs",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Sentait bondir en soi quelques nobles ardeurs,",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Suivait, comme un fanal, l'aur\u00e9ole \u00e9clatante",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Qui rayonnait au front du g\u00e9ant sous la tente ;",
                    "metre": "6+6",
                    "rhyme": "a"
                },
                {
                    "verse": "Chaque c\u0153ur de jeune homme en secret tourment\u00e9",
                    "metre": "6+6",
                    "rhyme": "b"
                },
                {
                    "verse": "Par quelque soif de gloire et de c\u00e9l\u00e9brit\u00e9,",
                    "metre": "6+6",
